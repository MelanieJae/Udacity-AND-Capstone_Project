<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/plan_form_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin Creatng a Plan" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/planTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/plan_form_plan_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin Creatng a Plan" />
    <EditText
        android:id="@+id/plan_form_plan_name_et"
        android:hint="Plan Name, e.g. 'Aunt Lila'"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/plan_form_zip_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin Creatng a Plan" />
    <EditText
        android:id="@+id/plan_form_zip_code_et"
        android:hint="ZIP Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_planning_btn"
        android:text="@string/start_planning_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/start_planning_btn"
        android:elevation="@dimen/btn_elevation"/>

</LinearLayout>