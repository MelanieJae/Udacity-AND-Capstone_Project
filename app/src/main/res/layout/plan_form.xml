<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/form_heading"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/large_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horiz_margin"
        android:layout_marginEnd="@dimen/horiz_margin"
        android:layout_marginTop="@dimen/vert_margin"
        android:layout_marginBottom="@dimen/vert_margin"/>

    <EditText
        android:id="@+id/plan_form_plan_name_et"
        android:hint="Plan Name, e.g. 'Aunt Lila'"
        android:layout_marginTop="@dimen/vert_margin"
        android:layout_marginBottom="@dimen/vert_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/plan_form_contact_email_et"
        android:hint="Contact E-mail"
        android:layout_marginTop="@dimen/vert_margin"
        android:layout_marginBottom="@dimen/vert_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_planning_btn"
        android:text="@string/start_planning_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/start_planning_btn"
        android:textSize="@dimen/large_text_size"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/horiz_margin"
        android:layout_marginEnd="@dimen/horiz_margin"
        android:layout_marginTop="@dimen/vert_margin"
        android:layout_marginBottom="@dimen/vert_margin"
        android:elevation="@dimen/btn_elevation"/>

</LinearLayout>