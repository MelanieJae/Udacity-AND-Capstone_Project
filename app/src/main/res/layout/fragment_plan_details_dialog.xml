<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="@dimen/detail_dialog_window_width"
    android:layout_height="@dimen/detail_dialog_window_height"
    android:orientation="vertical"  >

    <ImageView
        android:id="@+id/shared_element_transition_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_dialog_image_height" />
    <TextView
        android:id="@+id/details_text"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/est_cost_text"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>