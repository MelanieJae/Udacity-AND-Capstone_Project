<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cv1"
    card_view:cardElevation="4dp"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:columnCount="2"
        android:rowCount="2">
        <TextView
            android:id="@+id/heading"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Heading"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <Button
            android:id="@+id/add_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/add_button_cd"
            android:text="+"
            android:textColor="@android:color/white"
            android:background="@drawable/add_button"/>
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="200dp"
            tools:src="@drawable/map_sample"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <Button
            android:id="@+id/details_button"
            android:text="@string/details_button"
            android:textSize="@dimen/details_button_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/details_button_cd"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </GridLayout>
</android.support.v7.widget.CardView>