<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/slide</item>

        <!-- specify exit transition -->
        <item name="android:windowExitTransition">@transition/slide</item>
        <!-- specify exit transition -->
        <item name="android:windowSharedElementExitTransition">@transition/slide</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="background">@color/primary_light</item>-->
    </style>

    <style name="MenuItemButton">
        <item name="android:height">100dp</item>
        <item name="android:width">100dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@drawable/menu_item_button</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
